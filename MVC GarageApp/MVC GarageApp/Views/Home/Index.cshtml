@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>EXECUTIVE PARKING</h1>
    <p class="lead">Secure parking for your most prized possession whenever you need it.  <br />
    Open 24 hours a day, 365 days a year!</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Cars</h2>        
        <img class="imageToRotate" src="~/Images/car.jpg" alt ="car image" width="280" height ="165"/>            
        <p><button class="btn btn-default"> @Html.ActionLink("Details", "CarInfo")</button></p>
    </div>
    <div class="col-md-3">
        <h2>Busses</h2>
        <img src="~/Images/minibus.jpg" width="280" height="165" />
        <p><button class="btn btn-default"> @Html.ActionLink("Details", "BusInfo")</button></p>
    </div>
    <div class="col-md-3">
        <h2>Boats</h2>
        <img src="~/Images/boat.jpg" width="280" height="165" />
        <p><button class="btn btn-default"> @Html.ActionLink("Details", "BoatInfo")</button></p>        
    </div>
    <div class="col-md-3">
        <h2>Airplanes</h2>
        <img src="~/Images/airplane.jpg" width="280" height="165" />
        <p><button class="btn btn-default"> @Html.ActionLink("Details", "AirplaneInfo")</button></p>        
    </div>
</div>
