@model IPagedList<ParkedVehicle>

@{
    ViewBag.Title = "Index";
}

<h2>Garage</h2>

<div class="row">
    <button class="btn btn-default">@Html.ActionLink("Park New", "Create")</button>
    <div class="form-group pull-right input-group">
        <form method="get">
            <input type="search" name="searchTerm" class="form-control" placeholder="Search for..." />
            <span class="input-group-btn">
                <button type="submit" class="btn btn-info">Search</button>
            </span>
        </form>
    </div>
</div>
